<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/search_lanmu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/search_notesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginRight="35dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/gray"
        android:layout_below="@+id/search_lanmu"/>
    <TextView
        android:id="@+id/search_authors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/gray"
        android:textSize="16dp"
        android:layout_below="@+id/search_notesTitle"
        />

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/search_notesType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="16dp"
            android:layout_below="@+id/search_authors"
            />
<ImageView
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_margin="@dimen/layout_padding"
    android:layout_centerInParent="true"
    android:layout_alignParentRight="true"
    android:src="@mipmap/me_next"
    android:scaleType="fitXY"
    />
<ImageView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/search_gray"
    android:layout_alignParentBottom="true"
    />
</RelativeLayout>