<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="cn.incongress.endorcrinemagazine.activity.LoginActivity">
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:onClick="back"
        android:src="@mipmap/nav_close"
        android:layout_marginLeft="@dimen/layout_padding"
        android:layout_marginTop="@dimen/layout_padding"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >
    <ImageView
        android:layout_marginTop="-70dp"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@mipmap/login_icon"
        android:layout_marginBottom="50dp"
        />
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@drawable/btn_me_login"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/login_phone"
            android:layout_marginRight="10dp"
            />
        <cn.incongress.endorcrinemagazine.widget.ClearEditText
            android:id="@+id/login_phone"
            android:drawableRight="@mipmap/edittext_delete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:numeric="integer"
            android:textSize="16dp"
            android:textColor="@color/details"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingRight="5dp"
            android:textColorHint="@color/umeng_divide"
            android:hint="@string/login_phone1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@drawable/btn_me_login"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/login_password"
                android:layout_marginRight="10dp"
                />
        <EditText
            android:id="@+id/login_yzm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:numeric="integer"
            android:textSize="16dp"
            android:textColor="@color/details"
            android:textColorHint="@color/umeng_divide"
            android:hint="@string/login_yz1"
            />
        </LinearLayout>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/details"
            />
        <Button
            android:id="@+id/login_haveyzm"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/login_yz3"
            android:background="@drawable/btn_login_yzm"
            android:textColor="@color/details"
            android:textSize="16dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_login"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_marginTop="40dp"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:text="@string/login_log"
    android:textColor="@color/white"
    android:textSize="18dp"
    android:background="@drawable/btn_login_activity"/>

</LinearLayout>
    <TextView
        android:id="@+id/login_register"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="@string/login_reg"
        android:textColor="@color/details"
        android:textSize="18dp"
        android:background="@null"/>
</RelativeLayout>
